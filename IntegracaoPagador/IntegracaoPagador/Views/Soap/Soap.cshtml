@model IntegracaoPagador.ViewModels.SoapViewModel
@{
    ViewBag.Title = "Integração Pagador - Soap";
}

<h2>Informações do Pedido</h2>

@using (Html.BeginForm("Authorize", "Soap", 1))
{

    <p class="alert alert-info">All fields are <strong>required.</strong></p>

    <div class="form-group">
        @Html.LabelFor(m => m.CustomerName)
        @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.CustomerName)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Country)
        @Html.TextBoxFor(m => m.Country, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.Country)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Currency)
        @Html.TextBoxFor(m => m.Currency, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.Currency)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Amount)
        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.Amount)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CardNumber)
        @Html.TextBoxFor(m => m.CardNumber, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.CardNumber)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Holder)
        @Html.TextBoxFor(m => m.Holder, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.Holder)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Expiration)
        @Html.TextBoxFor(m => m.Expiration, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.Expiration)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SecurityCode)
        @Html.TextBoxFor(m => m.SecurityCode, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.SecurityCode)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NumberPayments)
        @Html.TextBoxFor(m => m.NumberPayments, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.NumberPayments)
    </div>

    <button id="button-enviar" type="submit" class="btn btn-primary btn-lg">Enviar</button>
}

@section scripts{
    <!-- Adicionando manualmente o script para validação do lado cliente.
    Para que não faça sempre uma requisição ao servidor -->
    @Scripts.Render("~/bundles/jqueryval")
}



