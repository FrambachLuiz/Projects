@model IntegracaoPagador.ViewModels.RestViewModel

@{
    ViewBag.Title = "title";
}

<h2>Informações do Pedido</h2>

@using (Html.BeginForm("Authorize", "Rest", 1))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new {@class = "form-control", autofocus = "autofocus"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Type)
        @Html.TextBoxFor(m => m.Type, new {@class = "form-control", autofocus = "autofocus"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Amount)
        @Html.TextBoxFor(m => m.Amount, new {@class = "form-control", autofocus = "autofocus"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Provider)
        @Html.TextBoxFor(m => m.Provider, new {@class = "form-control", autofocus = "autofocus"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Installments)
        @Html.TextBoxFor(m => m.Installments, new {@class = "form-control", autofocus = "autofocus"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CardNumber)
        @Html.TextBoxFor(m => m.CardNumber, new {@class = "form-control", autofocus = "autofocus"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Holder)
        @Html.TextBoxFor(m => m.Holder, new {@class = "form-control", autofocus = "autofocus"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ExpirationDate)
        @Html.TextBoxFor(m => m.ExpirationDate, new {@class = "form-control", autofocus = "autofocus"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SecurityCode)
        @Html.TextBoxFor(m => m.SecurityCode, new {@class = "form-control", autofocus = "autofocus"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Brand)
        @Html.TextBoxFor(m => m.Brand, new {@class = "form-control", autofocus = "autofocus"})
    </div>

    <button id="button-enviar" type="submit" class="btn btn-primary btn-lg">Enviar</button>
}

@section scripts{}